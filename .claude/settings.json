{
  "permissions": {
    "allow": [
      "read",
      "write",
      "git"
    ],
    "deny": [
      "env:write",
      "network:external"
    ],
    "ask": [
      "file:delete:batch",
      "git:push:main"
    ]
  },
  "behavior": {
    "security_first": true,
    "require_confirmation_for_critical": true,
    "documentation_standards": {
      "require_examples": false,
      "no_superlatives": true,
      "no_emojis": true
    }
  },
  "automation": {
    "auto_validate_on_save": false,
    "suggest_fixes": true,
    "remember_preferences": true
  }
}